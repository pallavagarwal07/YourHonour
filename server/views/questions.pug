doctype html
html
  head
    title= "Questions"
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/custom.css')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/submissions.js')
    script(src='/js/common.js')
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body
    .container
      .row
        .col-xs-4
          h1= 'Questions'
        .col-xs-8.vertical-center
          div.btn-group(role="group")
            a.btn.btn-default(href='/submissions' role='button' style="outline: none") Submissions
            a.btn.btn-default.active(href='/questions' role='button') Questions
            a.btn.btn-default(href='/dashboard' role='button') Dashboard
            a.btn.btn-default(href='/logout' role='button') Logout
      br
      div.row
        div.col-md-10.col-md-offset-1.list-group
          - for (var i=1; i<=total; i++) {
          a.list-group-item.list-group-item-action(href=("/"+i) type="button")= "Question #"+i
            span(style="padding-left: 10px")= names[i]
            span(style="float: right")= "Points: " + points[i]
          - }
